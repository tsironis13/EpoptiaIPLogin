<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/containerLnlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="35dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/adminUsernameEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/admnusername_hint" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/adminPasswordEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/admnpassword_hint" />

        <Button
            android:id="@+id/unlockDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:textColor="@color/colorAccent"
            android:text="Unlock" />

    </LinearLayout>

    <epoptia.iplogin.com.keyboard.MyKeyboard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>